.placeholder {
  width: 168px;
  height: 104px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.container{
  position: relative;
  padding: .8rem 1.2rem 0;

  .main-canvas{
    width: 300px;
    height: 300px;
    margin: 0 auto;
    border: 1px solid #bfbfbf;
    border-radius: .4rem;
  }

  .btn-area{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: .4rem 2.4rem 2rem;
    background-color: #fff;
  }
}